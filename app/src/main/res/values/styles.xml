<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    START EditText-->
    <style name="SolasiEditText">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textColorHint">?android:attr/textColorHint</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>
    <!--    END EditText-->

    <!--    START TextView-->
    <style name="SolasiTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="SolasiTextView.Primary">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="SolasiTextView.Primary.Bold">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="SolasiTextView.Secondary">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="SolasiTextView.FontBold">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>
    <!--    END TextView-->

    <style name="CardViewStyle">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:background">?attr/defaultRectRippleBackground</item>
        <item name="cardCornerRadius">@dimen/dimen8dp</item>
        <item name="cardElevation">@dimen/dimen0dp</item>
        <item name="strokeColor">?attr/colorDivider</item>
        <item name="strokeWidth">@dimen/dimen1dp</item>
    </style>
</resources>