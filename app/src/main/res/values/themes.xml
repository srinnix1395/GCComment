<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

        <item name="colorDivider">@color/color_divider</item>
        <item name="colorControlActivated">@color/color_primary</item>

        <!-- Text color-->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <!-- Ripple-->
        <item name="defaultBorderlessRippleBackground">@drawable/default_borderless_ripple_background</item>
        <item name="defaultRectRippleBackground">@drawable/default_rect_ripple_background</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
        <item name="maskRippleColor">@color/white_op_72</item>
    </style>
</resources>